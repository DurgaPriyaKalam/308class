package fibonocci;
import java.util.Scanner;

public class Fibonocci {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int sum=0;
  
   for(int i=0;i<=500;i++)
   {
	   if(i%2==0)
	   {
		   int a=0,b=1,c=0;
		   
		   
			   while(c<i)
			   {
				   c=a+b;
				   a=b;
				   b=c;
			   }
			   if(c==i)
			   {
				   System.out.println(i+ "The numbers of fibonocci series upto 500 are");
				   sum=sum+c;
			   }
		   }
	   }
   
   System.out.print( "\nTotal sum of the numbers are:" + sum);	
  
	}
	}

